<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 工具栏 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- 字体大小设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="字体大小"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/seekBarFontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3" />

        <TextView
            android:id="@+id/tvFontSizeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18px"
            android:gravity="center" />

        <!-- 行间距设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="行间距"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/seekBarLineSpacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="2" />

        <TextView
            android:id="@+id/tvLineSpacingValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.2"
            android:gravity="center" />

        <!-- 主题选择 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 翻页模式 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="翻页模式"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerPageTurnMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 开关设置 -->
        <Switch
            android:id="@+id/switchAutoScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自动滚动"
            android:layout_marginTop="16dp" />

        <Switch
            android:id="@+id/switchNightMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:layout_marginTop="8dp" />

        <Switch
            android:id="@+id/switchFullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全屏模式"
            android:layout_marginTop="8dp" />

        <!-- 操作按钮 -->
        <Button
            android:id="@+id/btnResetSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置设置"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnExportConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导出配置"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
