<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="编辑书名"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- 输入框容器 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/primary_color"
            app:startIconDrawable="@drawable/ic_edit"
            app:startIconTint="@color/primary_color"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入书名"
                android:inputType="textCapWords"
                android:maxLength="15"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 字符计数 -->
        <TextView
            android:id="@+id/tv_char_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/15"
            android:textSize="11sp"
            android:textColor="@color/gray_600"
            android:gravity="end"
            android:layout_marginBottom="12dp" />

        <!-- 位置选项 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="书名位置"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp" />

        <!-- 水平布局的位置按钮 -->
        <LinearLayout
            android:id="@+id/layout_position_buttons_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_position_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_position_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_position_bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下"
                android:layout_marginStart="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- 垂直布局的位置按钮 -->
        <LinearLayout
            android:id="@+id/layout_position_buttons_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_position_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_position_center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_position_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右"
                android:layout_marginStart="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="8dp" />

        <!-- 布局选项 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文字布局"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_layout_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="水平"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_layout_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="垂直"
                android:layout_marginStart="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="8dp" />

        <!-- 颜色选项 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文字颜色"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_color_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="黑色"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_color_white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="白色"
                android:layout_marginStart="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="8dp" />

        <!-- 字体选项 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="字体选择"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_font_system"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="系统"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_font_mashanzheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="马善政"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_font_notoserif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="思源宋体"
                android:layout_marginStart="2dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- 取消按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/gray_600"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- 确认按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="@color/white"
                android:enabled="false"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
