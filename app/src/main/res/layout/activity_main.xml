<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <!-- 主要内容容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingBottom="40dp">



        <!-- 最后阅读图书卡片 -->
        <LinearLayout
            android:id="@+id/ll_last_read_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/last_read_card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_last_read_cover"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/placeholder_cover"
                    android:contentDescription="最后阅读图书封面"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_last_read_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="图书标题"
                        android:textColor="@color/apple_books_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_last_read_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已读 0%"
                        android:textColor="@color/apple_books_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_last_read_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="刚刚"
                        android:textColor="@color/apple_books_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_continue_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1EB4A2"
                    android:text="继续阅读"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 默认欢迎图片容器 -->
        <LinearLayout
            android:id="@+id/ll_welcome_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_welcome"
                android:layout_width="325dp"
                android:layout_height="454dp"
                android:contentDescription="欢迎图片"
                android:scaleType="centerCrop"
                android:src="@drawable/welpic" />

        </LinearLayout>

        <!-- 文字容器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="兜兜绕绕 我们还是相遇了～"
                android:textColor="@color/apple_books_secondary"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_book_library"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF40353A"
                android:text="书库"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
