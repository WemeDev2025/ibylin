<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/reader_background"
    tools:context=".reader.ReadiumEpubReaderActivity">

    <!-- 加载状态视图 -->
    <LinearLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/reader_background"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/reader_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="正在加载EPUB文件..."
            android:textSize="16sp"
            android:textColor="@color/reader_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="请稍候..."
            android:textSize="14sp"
            android:textColor="@color/reader_text_secondary" />

    </LinearLayout>

    <!-- 阅读器容器 -->
    <FrameLayout
        android:id="@+id/reader_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/reader_content_background"
        android:visibility="gone" />

    <!-- 底部控制栏 -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/reader_controls_background"
        android:padding="16dp"
        android:elevation="8dp"
        android:visibility="gone">

        <!-- 字号调节 -->
        <Button
            android:id="@+id/btn_font_size"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="字号"
            android:textSize="14sp"
            android:background="@color/reader_accent"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:onClick="showFontSizeMenu" />

        <!-- 背景调节 -->
        <Button
            android:id="@+id/btn_background"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="背景"
            android:textSize="14sp"
            android:background="@color/reader_accent"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:onClick="showBackgroundMenu" />

        <!-- 关闭按钮 -->
        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="关闭"
            android:textSize="14sp"
            android:background="@color/reader_accent"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:onClick="hideControls" />

    </LinearLayout>

    <!-- 阅读进度条 -->
    <SeekBar
        android:id="@+id/reading_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/reader_accent"
        android:thumbTint="@color/reader_accent"
        android:visibility="gone" />

    <!-- 进度信息 -->
    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:text="0%"
        android:textSize="12sp"
        android:textColor="@color/reader_text_secondary"
        android:visibility="gone" />

</LinearLayout>
