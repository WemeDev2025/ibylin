<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".reader.ReadiumReaderActivity">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- 阅读器主容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 阅读器内容容器 -->
        <FrameLayout
            android:id="@+id/reader_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- 这里将放置Librera Reader阅读器视图 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Librera Reader阅读器将在这里显示"
                android:textSize="18sp"
                android:textColor="@color/black" />

        </FrameLayout>

        <!-- 加载视图 -->
        <LinearLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载书籍..."
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </FrameLayout>

    <!-- 底部控制栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- 上一页按钮 -->
        <ImageButton
            android:id="@+id/btn_previous_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="上一页"
            android:src="@drawable/ic_arrow_left"
            android:scaleType="centerInside" />

        <!-- 页码显示 -->
        <TextView
            android:id="@+id/tv_page_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="第 1 页 / 共 100 页"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- 下一页按钮 -->
        <ImageButton
            android:id="@+id/btn_next_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="下一页"
            android:src="@drawable/ic_arrow_right"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>
