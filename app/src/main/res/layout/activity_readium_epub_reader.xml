<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".reader.ReadiumEpubReaderActivity">

    <!-- 阅读器容器 -->
    <FrameLayout
        android:id="@+id/reader_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 顶部章节名称显示 -->
    <TextView
        android:id="@+id/tv_chapter_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="28dp"
        android:text="当前章节"
        android:textColor="#999999"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部页码显示 -->
    <TextView
        android:id="@+id/tv_page_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="1 / 100"
        android:textColor="#999999"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- iOS风格淡蒙层 - 单击屏幕时显示 -->
    <View
        android:id="@+id/ios_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#10000000"
        android:alpha="0"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 右下角菜单图标 - 单击屏幕时显示 -->
    <FrameLayout
        android:id="@+id/ios_menu_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ios_menu_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ios_menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu"
            android:tint="@android:color/white" />

    </FrameLayout>

    <!-- iOS风格二级菜单面板 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ios_menu_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#40353A"
        app:layout_constraintBottom_toTopOf="@id/ios_menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 亮度调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- 亮度标签 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_brightness"
                        android:tint="#FFFFFF"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="亮度"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- 亮度滑块 - 占据整行 -->
                <SeekBar
                    android:id="@+id/brightness_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:max="100"
                    android:progress="50"
                    android:minHeight="48dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:thumbOffset="0dp"
                    android:splitTrack="false" />

            </LinearLayout>

            <!-- 间距调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- 间距标签 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_sort"
                        android:tint="#FFFFFF"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="间距"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- 间距滑块 - 占据整行 -->
                <SeekBar
                    android:id="@+id/spacing_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:max="200"
                    android:progress="100"
                    android:minHeight="48dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:thumbOffset="0dp"
                    android:splitTrack="false" />

            </LinearLayout>

            <!-- 章节浏览 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/chapter_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 章节项将通过代码动态添加 -->

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- 功能按钮行 - 4个系统风格icon水平排列 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- 主题设置 -->
                <ImageButton
                    android:id="@+id/btn_theme"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_theme"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="主题设置" />

                <!-- 字体大小 -->
                <ImageButton
                    android:id="@+id/btn_font_size"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_font_size"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="字体大小" />

                <!-- 章节目录 -->
                <ImageButton
                    android:id="@+id/btn_toc"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_document"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="章节目录" />

                <!-- 书签 -->
                <ImageButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_bookmark"
                    android:tint="#FFFFFF"
                    android:contentDescription="书签" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
