<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="6dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false"
    app:strokeWidth="0dp"
    android:stateListAnimator="@animator/card_scale_animator">

    <!-- 封面图片 - 撑满MaterialCardView -->
    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/placeholder_cover"
        android:contentDescription="书籍封面"
        android:scaleType="centerCrop" />
    
    <!-- 格式标签 -->
    <TextView
        android:id="@+id/tv_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:background="@drawable/format_badge_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="EPUB"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

</com.google.android.material.card.MaterialCardView>

